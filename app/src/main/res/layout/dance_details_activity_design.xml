<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_margin="10dp"
        android:id="@+id/DanceDetailsImage"
        android:layout_gravity="center_horizontal"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:padding="5dp"
        android:layout_margin="10dp"
        android:id="@+id/DanceDetailsTitle"
        android:layout_gravity="center_horizontal"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:layout_margin="10dp"
        android:id="@+id/DanceDetailsDescription"
        android:layout_gravity="center_horizontal"/>

    <!--<view
        class="com.google.android.youtube.player.YouTubePlayerView"
        android:id="@+id/DanceDetailsYoutube"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/DanceDetailsButton"
        android:text="@string/DanceDetailsPlayButton"
        android:layout_gravity="center_horizontal"
        />-->
    <android.support.v7.widget.RecyclerView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_margin="10dp"
        android:id="@+id/recyclerView">
    </android.support.v7.widget.RecyclerView>

</LinearLayout>